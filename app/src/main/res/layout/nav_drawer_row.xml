<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground">

    <ImageView
        android:id="@+id/img_nav_drawer_item"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:src="@drawable/icon_menu_drinkwater"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/textview_nav_drawer_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_nav_drawer_item"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_20sdp"
        android:text="@string/navigation_item"
        android:textSize="@dimen/_15sdp"/>
    <View
        android:id="@+id/bottom_line_nav_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@color/gray_light"
        android:layout_below="@id/img_nav_drawer_item"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="gone"/>
</RelativeLayout>