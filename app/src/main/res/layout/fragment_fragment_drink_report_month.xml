<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.refreshbody.fragment.FragmentDrinkReportMonth">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartMonth"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hight_chart" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hight_chart1"
                android:orientation="horizontal">
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chartPieDay"
                    android:layout_width="@dimen/weight_chart"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"/>
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chartMonthPie"
                    android:layout_width="@dimen/weight_chart"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</FrameLayout>
