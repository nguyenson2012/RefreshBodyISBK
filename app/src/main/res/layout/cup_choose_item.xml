<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground">
    <ImageView
        android:id="@+id/img_cup_choose_item"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/cup_one"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_15sdp"/>
    <LinearLayout
        android:id="@+id/layout_info_cup_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/img_cup_choose_item"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tv_name_cup_choose_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WATER"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="@dimen/_5sdp"/>
        <TextView
            android:id="@+id/tv_amount_cup_choose_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100ml"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_edit_cup_choose_item"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_edit_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_5sdp"
        android:background="?selectableItemBackground"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="@color/gray_light"
        android:layout_below="@id/img_cup_choose_item"
        android:layout_marginTop="@dimen/_5sdp"/>
</RelativeLayout>