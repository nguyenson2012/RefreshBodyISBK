<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_5sdp">
        <RelativeLayout
            android:id="@+id/layout_drink_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_user_state"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_40sdp"
                android:src="@drawable/mascot_bad"/>
            <TextView
                android:id="@+id/tv_percent_drink_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 %"
                android:layout_below="@id/img_user_state"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"/>
            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/circle_progress"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/_15sdp"
                CircleProgressView:cpv_autoTextSize="true"
                CircleProgressView:cpv_barColor="@color/colorPrimary"
                CircleProgressView:cpv_barWidth="@dimen/_10sdp"
                CircleProgressView:cpv_innerContourSize="0dp"
                CircleProgressView:cpv_maxValue="100"
                CircleProgressView:cpv_outerContourSize="0dp"
                CircleProgressView:cpv_rimColor="@color/gray_light"
                CircleProgressView:cpv_rimWidth="@dimen/_10sdp"
                CircleProgressView:cpv_seekMode="false"
                CircleProgressView:cpv_showUnit="true"
                CircleProgressView:cpv_textMode="Text"
                CircleProgressView:cpv_spinColor="@color/colorPrimary"
                CircleProgressView:cpv_textColor="@color/colorPrimaryDark"
                CircleProgressView:cpv_textScale="0.4"
                CircleProgressView:cpv_unitToTextScale="0.5"
                CircleProgressView:cpv_unit=""
                CircleProgressView:cpv_unitScale="0.4"
                CircleProgressView:cpv_unitColor="@color/colorPrimary"
                CircleProgressView:cpv_unitPosition="right_top"
                CircleProgressView:cpv_value="10"
                />
            <TextView
                android:id="@+id/tv_drink_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_progress"
                android:text="0/2000ml"
                android:textSize="@dimen/_15sdp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_intake_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_drink_target"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:text="@string/drink_intake"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorPrimary"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:background="@android:color/white"/>
        <View
            android:id="@+id/divider_drink_intake_label"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_below="@id/tv_intake_label"
            android:background="@color/gray_light"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_drink_intake"
            android:layout_below="@id/divider_drink_intake_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@android:color/white">
        </android.support.v7.widget.RecyclerView>
        <View
            android:id="@+id/divider_drink_intake_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_below="@id/recycler_view_drink_intake"
            android:background="@color/gray_light"/>
        <TextView
            android:id="@+id/tv_add_drink_intake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/button_add_intake"
            android:text="Add"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@id/divider_drink_intake_add"/>
    </RelativeLayout>

</ScrollView>