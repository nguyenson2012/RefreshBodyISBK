<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.asus.refreshbody.fragment.FragmentDrinkReportWeek">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartWeek"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hight_chart"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hight_chart1"
                android:orientation="horizontal"
                android:weightSum="1">
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chartPieDay"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_gravity="left|top"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_7sdp" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chartWeekPie"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_gravity="right|top"
                    android:layout_marginLeft="@dimen/_10sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:text="Day"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:textAlignment="center"
                    android:text="Week"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
